 (rc msg result)←path RunGitCommand command;cmd;buff
 path←{'/'@(⍸'/'=⍵)⊣⍵}path
 cmd←'-C "',path,'" ',command
 buff←RunProcess'git'cmd
 (rc msg result)←buff.(ExitCode StdErr StdOut)
 :Select rc
 :Case 127
     msg←'It appears that Git is not installed'
 :Case 128
     :If ∨/'Who are you'⍷msg
         msg←'Who are you? (set user.email and user.name)'
     :EndIf
 :Else
     :If 0=≢msg
         msg←command,' => ',path
     :EndIf
 :EndSelect
⍝Done
